<div class="header">
    <%= image_tag 'logo.png', id: "a-logo" %>
</div>
<div class="sign-in-form">

    <div class="form">
        <%= form_with url: sessions_path, method: :post, local: true do |form|%>
                    <h1 id = "f-h1">Sign in</h1>
                    <div class="label1">
                        <%= form.label :login, 'Email or mobile phone number', id: "s-label" %>
                        <%= form.text_field :login, id: "input-box" %>
                        <%= form.submit "Continue", id: "btn1" %>
                    </div>
        <% end %>
    
        <div class="suggestion">
                    <%= link_to 'By continuing, you agree to Amazons Conditions of Use and Privacy Notice.', "#", id: "terms" %>
                    <br>
                    <br>
                    <%= link_to 'Need help?', "#",id: "help" %>
                    <hr>
                    <div class="base">
                        <div id = "l1">Buying for work?</div>
                            <span id = "l2">Shop on Amazon Business</span>
                        </div>
                    </div>
        </div>
    </div>

    <div class="for-new"> 
        <p> New to Amazon? </p> 
    </div>
<div class="create">
    <div class="create-acc">
        <%= link_to render_signup_path, class: "sign-up" do %>
            <p id= "btn2"> Create your Amazon account </p> 
        <% end %>
    </div>
</div>
    <hr style="border-top:1px solid rgba(128, 128, 128, 0.32) ;">
    <br>
    <div class = "footer">
        <div class="f1">
            <%= link_to 'Conditions of Use', "#",class: "terms" %> 
