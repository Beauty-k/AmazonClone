<style>

    #s{
        text-decoration: none;
        color: #ffffff;
        font-size: 12px;
    }
    #A-l{
        text-decoration: none;
        color: #ffffff;
        font-weight: 700;
    }
    #a_logo{
        height: 55px;
        width: 130px;
        padding: 10px;
        object-fit: contain;
    }
    .Border{
        padding: 5px;
    }
    .Border:hover{
        border: 1px solid white;
    }

    .drop-down{
        height: 40px;
        width: 51.6px;
        border-top-left-radius:4px ;
        border-bottom-left-radius: 4px;
        background-color: #ced4da23;
        color: #0f1111;
        padding: 0px 0px 0px 5px;
        border: none;
        font-size: 14px; 
    
    }
    .search:active{
        border: 2px solid orange;
    }   

/* Panel Styling */

    .panel{
        height: 40px;
        width: 100%;
        background-color: #232f3e;
        font-size: 12px;
        display: flex;  
    }
    .menu{
        height: 39px;
        width: 58px;
        color: #ffffff;
        padding: 8px 9px;
        display: flex;
        margin-top: 5px;
    }
    .Menu-link{
        text-decoration: none;
    }
    .menu i{
        height: 14px;
        width: 17px;
        font-size: 19px;
        color: #ffffff;
    }
    #m-all{
        height: 12px;
        width: 23px;
        font-weight: 700;
        font-size: 15px;
        color: #ffffff;
        
    }
    .panel-opts{
        font-size: 14px;
        margin: 5px 0px 6px; 
        padding: 8px 9px;
        display: flex;
        justify-content: center;
        align-items: center;
        justify-content: space-evenly;
    }
    .opts{
        text-decoration: none;
        color: #ffffff;
        margin-right: 10px;
    }
    .s-rend{
        text-decoration: none;
    }
    #c-i{
        color: #ffffff;
        height: 25px;
        width: 20px;
        margin-right: 3px;
    }
</style>

<div class="header">
    
    <%= image_tag 'amazon_logo.png', alt: "amazon_logo", id: "a_logo",class: "Border" %>
    
    <div id = "text1" class= "Border">
        <%= link_to 'Deliver to', "#", id: "loc" %>
        <p id="icon">
            <i class="fa-solid fa-location-dot"></i>
            <span id="Ind">India</span>
        </p>
    </div>
                <!-- Search form-->
   <div class="search-sec">

        <%= form_with url: search_path, method: :get do |form|%>
            <div class="search">
                <%= form.select :categories, options_for_select(["All"]), class: "drop-down" %>
                <%= form.text_field :query,placeholder: "Search Amazon", id: "input-box" %>
                <button type="submit" class="search-icon">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        <% end %>
   </div>

   <div class="lng Border">
        <%= image_tag 'f-icon.png', id: "f-icon" %>
        <p id="en">EN</p>
   </div>

    <div class="s-L Border">
        <%= link_to render_form_path, class: "s-rend" do %>
            <div class="s-in">
                <span id="s">Hello,Sign in</span>
                <span id="A-l">Accounts & Lists</span>
            </div>
        <% end %>
    </div>

    <div class="return Border">
        <%= link_to 'Returns', "#", id: "ret" %>
        <%= link_to '& Orders', "#", id: "ord" %>
    </div>
    
    <div class="cart Border">
        <%#= link_to image_tag()'text', path %>
        <i class="fa-solid fa-cart-shopping" id="c-i"></i>
        <%= link_to "Cart(#{@cart.cart_items.sum(:quantity)})", cart_path(@cart), id: "cart" %>
    </div>
</div>

<div class="panel">

    <div class="menu Border">
        <%= link_to render_partial_path, class:"Menu-link" do %>
            <i class="fa-solid fa-bars"></i>
            <span id = "m-all">All</span>  
        <% end %>
    </div>

    <div class="panel-opts">
        <%= link_to 'Todays Deal', "#", class: "opts Border"%>
        <%= link_to 'Customer Service', "#", class: "opts Border"%>
        <%= link_to 'Registry', "#", class: "opts Border" %>
        <%= link_to 'Gift cards', "#", class: "opts Border" %>
        <%= link_to 'Sell', "#", class: "opts Border" %>
    </div>
</div>