<style>

    #s{
        text-decoration: none;
        color: #ffffff;
        font-size: 12px;
    }
    #A-l{
        text-decoration: none;
        color: #ffffff;
        font-weight: 700;
    }
    #a_logo{
    height: 80px;
    width: 140px;
    padding: 20px 15px 15px;
    object-fit: contain;
    
}

/* Panel Styling */

    .panel{
        height: 40px;
        width: 100%;
        background-color: #232f3e;
        font-size: 12px;
        display: flex;  
    }
    .menu{
        height: 39px;
        width: 58px;
        color: #ffffff;
        padding: 8px 9px;
        display: flex;
        margin-top: 5px;
    }
    .Menu-link{
        text-decoration: none;
    }
    .menu i{
        height: 14px;
        width: 17px;
        font-size: 19px;
        color: #ffffff;
    }
    #m-all{
        height: 12px;
        width: 23px;
        font-weight: 700;
        font-size: 15px;
        color: #ffffff;
        
    }
    .panel-opts{
        font-size: 14px;
        margin: 5px 0px 6px; 
        padding: 8px 9px;
        display: flex;
        justify-content: center;
        align-items: center;
        justify-content: space-evenly;
    }
    .opts{
        text-decoration: none;
        color: #ffffff;
        margin-right: 10px;
    }
    .s-rend{
        text-decoration: none;
    }
    #c-i{
        color: #ffffff;
        height: 25px;
        width: 20px;
        margin-right: 3px;
    }
</style>

<div class="header">
    
    <%= image_tag 'amazon_logo.png', alt: "amazon_logo", id: "a_logo" %>
    
    <div id = "text1">
        <%= link_to 'Deliver to', "#", id: "loc" %>
        <p id="icon">
            <i class="fa-solid fa-location-dot"></i>
            <span id="Ind">India</span>
        </p>
    </div>
                <!-- Search form-->
   <div class="search-sec">

        <%= form_with url: products_path, method: :get do |form|%>
            <div class="search">
                <%= form.select :categories, options_for_select(["All"]), class: "drop-down" %>
                <%= form.text_field :query,placeholder: "Search Amazon", id: "input-box" %>
                <button type="submit" class="search-icon">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        <% end %>
   </div>

   <div class="lng">
        <%= image_tag 'f-icon.png', id: "f-icon" %>
        <p id="en">EN</p>
   </div>

    <div class="s-L">
        <%= link_to render_form_path, class: "s-rend" do %>
            <div class="s-in">
                <span id="s">Hello,Sign in</span>
                <span id="A-l">Accounts & Lists</span>
            </div>
        <% end %>
    </div>

    <div class="return">
        <%= link_to 'Returns', "#", id: "ret" %>
        <%= link_to '& Orders', "#", id: "ord" %>
    </div>
    
    <div class="cart">
        <%#= link_to image_tag()'text', path %>
        <i class="fa-solid fa-cart-shopping" id="c-i"></i>
        <%= link_to 'Cart', "#", id: "cart" %>
    </div>
</div>

<div class="panel">

    <div class="menu">
        <%= link_to render_partial_path, class:"Menu-link" do %>
            <div class="render"></div>
            <i class="fa-solid fa-bars"></i>
            <span id = "m-all">All</span>  
        <% end %>
    </div>

    <div class="panel-opts">
        <%= link_to 'Todays Deal', "#", class: "opts"%>
        <%= link_to 'Customer Service', "#", class: "opts"%>
        <%= link_to 'Registry', "#", class: "opts" %>
        <%= link_to 'Gift cards', "#", class: "opts" %>
        <%= link_to 'Sell', "#", class: "opts" %>
    </div>
</div>